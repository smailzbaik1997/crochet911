{
  "functions": {
    "app/**": {
      "maxDuration": 30
    }
  },
  "images": {
    "sizes": [16, 32, 48, 64, 96, 128, 256, 384],
    "formats": ["image/avif", "image/webp"],
    "domains": [],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "**"
      },
      {
        "protocol": "http",
        "hostname": "**"
      }
    ],
    "dangerouslyAllowSVG": true,
    "contentSecurityPolicy": "default-src 'self'; script-src 'none'; sandbox;"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-src 'self' https: http: data:; frame-ancestors 'self' https: http:; img-src 'self' https: http: data: blob:;"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/patterns/:path*",
      "destination": "/crochetpatterns/:path*"
    }
  ]
}